# Application Settings
ENVIRONMENT=development  # development, staging, production, test
DEBUG=true
TESTING=false
SECRET_KEY=dev_secret_key_replace_in_production_7e1a34bd93b148f0
APP_NAME=NeoForge API
PROJECT_NAME=NeoForge
APP_VERSION=1.0.0
VERSION=0.1.0
FRONTEND_URL=http://localhost:3000

# API Settings
API_V1_STR=/api/v1
SERVER_HOST=http://localhost:8000
PORT=8000
HOST=0.0.0.0
WORKERS=4

# Local service port overrides (docker-compose)
# These make it easy to avoid conflicts with other apps.
FRONTEND_PORT=3000
API_PORT=8000
DB_PORT=55432
DB_TEST_PORT=55433
REDIS_PORT=56379

# Database Settings
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/app
REDIS_URL=redis://redis:6379/0

# JWT Settings
JWT_SECRET_KEY=dev_jwt_secret_key_replace_in_production_7e1a34bd93b148f0
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Settings (Environment-specific)
# Development: Allow localhost origins
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]
CORS_CREDENTIALS=true

# Production CORS Example:
# CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
# CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
# CORS_HEADERS=["Content-Type", "Authorization", "Accept", "Origin"]
# CORS_CREDENTIALS=true

# Rate Limiting Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_AUTH_REQUESTS=500
RATE_LIMIT_BY_IP=true
RATE_LIMIT_BY_KEY=true

# Security Settings (Production Examples)
# For production, use strong secrets and configure these properly:
# SECRET_KEY=your-super-secure-32-character-secret-key-here-change-this-in-production
# JWT_SECRET_KEY=your-jwt-secret-key-at-least-32-characters-long-change-in-production

# Email Settings (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@neoforge.com
EMAILS_FROM_NAME=NeoForge
EMAIL_RESET_TOKEN_EXPIRE_HOURS=48

# Admin Notifications
# Comma-separated list of email addresses
ADMIN_NOTIFICATION_EMAILS=admin@neoforge.com

# Cache Settings
CACHE_TTL_SECONDS=300

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Security Headers (Production Only)
# These are automatically configured based on ENVIRONMENT
# HSTS, CSP, and other security headers are stricter in production

# Production Database Example:
# DATABASE_URL=postgresql+asyncpg://username:password@prod-db-host:5432/prod_db

# Production Redis Example:
# REDIS_URL=redis://username:password@prod-redis-host:6379/0
